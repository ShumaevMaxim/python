numbers = []
num = int(input())
while num != 0:
    numbers.append(num)
    num = int(input())

print(f"Получено {len(numbers)} чисел")

max_height = 0
for i in range(1, len(numbers)):
    height = numbers[i] - numbers[i-1]
    if height > max_height:
        max_height = height

print(f"Наибольшая высота подъема: {max_height}")
